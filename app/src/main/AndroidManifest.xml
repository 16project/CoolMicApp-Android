<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.vorbisdemo" android:versionCode="5"
	android:versionName="1.0">
    <uses-sdk android:minSdkVersion="14" android:targetSdkVersion="21"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<application android:icon="@drawable/icon" android:label="@string/app_name">
		<activity android:name=".MainActivity"  android:label="@string/app_name" android:configChanges="keyboardHidden|orientation|screenSize">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name="com.vorbisdemo.server" android:label="Connection"
		    android:windowSoftInputMode="adjustResize"
		    android:parentActivityName="com.vorbisdemo.MainActivity">
		</activity>
		<activity android:name="com.vorbisdemo.audio" android:label="Audio"
		    android:windowSoftInputMode="adjustResize"
		    android:parentActivityName="com.vorbisdemo.MainActivity">
			<meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.vorbisdemo.MainActivity" />
		</activity>
		<activity android:name="com.vorbisdemo.home" android:label="Cool Mic"
		    android:windowSoftInputMode="adjustResize"
		    android:parentActivityName="com.vorbisdemo.MainActivity">
		    <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.vorbisdemo.MainActivity" />
		</activity>
		<activity android:name="com.vorbisdemo.general" android:label="General"
		    android:windowSoftInputMode="adjustResize"
		    android:parentActivityName="com.vorbisdemo.MainActivity">
		    <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.vorbisdemo.MainActivity" />
		</activity>
				<activity android:name="com.vorbisdemo.Refresh" android:label="General"
		    android:windowSoftInputMode="adjustResize"
		    android:parentActivityName="com.vorbisdemo.MainActivity">	
		</activity>
		  <service android:name=".MyService"
		     android:enabled="true"
		     android:stopWithTask="false" /> 
	</application>
</manifest>